<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:id="@+id/cardview_id"
        android:layout_width="match_parent"
        android:background="@drawable/back_top"
        android:layout_height="220dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:background="#257196"
                android:layout_height="?actionBarSize">
                <TextView
                    android:textSize="22sp"
                    android:text="COVID-19"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="16dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/button_menu"
                    android:src="@drawable/ic_baseline_menu_24"
                    android:layout_width="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_gravity="right|center"
                    android:layout_height="30dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="26dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:text="My country"
                    android:gravity="center"
                    android:textColor="#175A8F"
                    android:id="@+id/button_my"
                    android:background="@drawable/back1"
                    android:layout_width="100dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="36dp"/>
                <TextView
                    android:id="@+id/button_global"
                    android:background="@drawable/back1"
                    android:text="Global"
                    android:textColor="#175A8F"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_width="100dp"
                    android:layout_height="36dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_name"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="Uzbekistan"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toBottomOf="@+id/cardview_id"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_id"
        app:layout_constraintRight_toLeftOf="@id/card2"
        android:id="@+id/card1"
        style="@style/style_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="14dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/total_cases"
                android:text="4645121"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#D8044C"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/confirm_24"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="30dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        app:layout_constraintRight_toLeftOf="@id/card3"
        app:layout_constraintTop_toBottomOf="@id/cardview_id"
        app:layout_constraintLeft_toRightOf="@+id/card1"
        app:layout_constraintBottom_toBottomOf="@id/cardview_id"
        android:orientation="vertical"
        style="@style/style_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="14dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/total_deads"
                android:text="4645121"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/skull"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="28dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        app:layout_constraintLeft_toRightOf="@id/card2"
        app:layout_constraintTop_toBottomOf="@id/cardview_id"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/cardview_id"
        android:orientation="vertical"
        style="@style/style_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="14dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/total_recovered"
                android:text="4645121"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#1FB7FB"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:src="@drawable/recovered"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_height="28dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/card4"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <androidx.recyclerview.widget.RecyclerView
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>